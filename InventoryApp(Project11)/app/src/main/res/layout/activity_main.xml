<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.salyert.swarathesh.inventoryappproject11.MainActivity">
    <ListView
        android:id="@+id/list_goods"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_weight="7"
        android:descendantFocusability="blocksDescendants"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="no product click add product"
        android:id="@+id/notify"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:text="Clear database"
        android:textAllCaps="true"
        android:onClick="clearProducts"
        android:layout_weight="0.5"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new product"
        android:textAllCaps="true"
        android:onClick="openAddActivity"
        android:layout_weight="0.5"/>

</LinearLayout>
